# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real secrets to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Node Environment (development, staging, production)
NODE_ENV=development

# Application Port
PORT=3000

# Application Base URL
BASE_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (PostgreSQL, MySQL, etc.)
# Example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# SUPABASE CONFIGURATION (if using Supabase)
# =============================================================================

# Supabase Project URL
SUPABASE_URL=

# Supabase Anonymous/Public Key
SUPABASE_ANON_KEY=

# Supabase Service Role Key (server-side only, NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=

# =============================================================================
# AUTHENTICATION SECRETS
# =============================================================================

# JWT Secret for token signing (generate a strong random string)
JWT_SECRET=

# JWT Token Expiration (e.g., "7d", "24h", "1h")
JWT_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=

# =============================================================================
# API KEYS & THIRD-PARTY SERVICES
# =============================================================================

# OpenAI API Key (if using AI features)
OPENAI_API_KEY=

# Stripe API Keys (if handling payments)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# SendGrid/Email Service (if sending emails)
SENDGRID_API_KEY=
FROM_EMAIL=

# AWS Credentials (if using AWS services)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# GitHub OAuth (if using GitHub authentication)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (if using Google authentication)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry DSN (error tracking)
SENTRY_DSN=

# LogRocket App ID (session replay)
LOGROCKET_APP_ID=

# New Relic License Key (APM)
NEW_RELIC_LICENSE_KEY=

# =============================================================================
# REDIS/CACHE CONFIGURATION (if using caching)
# =============================================================================

# Redis Connection URL
REDIS_URL=

# Redis Connection Details (alternative to URL)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=false

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Vercel/Netlify/Platform-specific variables
VERCEL_URL=
NETLIFY_URL=

# Production Domain
PRODUCTION_DOMAIN=

# =============================================================================
# DEVELOPMENT/DEBUGGING
# =============================================================================

# Enable debug mode
DEBUG=false

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# NOTES
# =============================================================================
# 
# Security Best Practices:
# 1. Never commit this file with real values to version control
# 2. Use strong, randomly generated secrets (at least 32 characters)
# 3. Rotate secrets regularly
# 4. Use different secrets for development, staging, and production
# 5. Store production secrets in a secure secrets manager (AWS Secrets Manager, Vault, etc.)
# 6. Limit access to production secrets to only necessary team members
# 7. Use environment-specific .env files (.env.development, .env.production)
# 
# To generate a secure random secret, use:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#   or
#   openssl rand -hex 32
